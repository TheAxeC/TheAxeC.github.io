---
layout: null
permalink: /atom.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.data.main.name }}</title>
 <link href="{{ site.data.main.link }}/atom.xml" rel="self"/>
 <link href="{{ site.data.main.link }}"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>{{ site.data.main.link }}</id>
 <author>
   <name>{{ site.data.main.name }}</name>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="{{ site.link }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.link }}{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>
